<div class="search__bar-my">
    <%= form_tag properties_path, class: 'form__my', method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "search__bar-my-input",
        placeholder: "Procurar"
      %>
    <% end %>
</div>
  <section class="container__cards">
<% @properties.each do |property| %>
    <div class="card">
      <span class="card__code">Cod <%= property.id %></span>
      <div class="card__container">
        <img class="card__container-img" src="https://images.unsplash.com/photo-1622866306511-031a51990642?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8OHx8YXBhcnRhbWVudHxlbnwwfDB8MHx8&auto=format&fit=crop&w=500&q=60" alt="Apartamento">
        <div class="card__container-buttons">
          <%= link_to edit_property_path(property.id), class: "card__container-buttons-edit" do %>
            <button class="card__container-buttons-edit"><i class="far fa-edit card__container-icon-edit"></i>Editar</button>
          <% end %>
          <button class="card__container-buttons-delete"><i class="far fa-trash-alt card__container-icon-delete"></i>Excluir</button>
        </div>
      </div>
    </div>
    <% end %>
</section>
